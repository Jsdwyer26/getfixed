<h1>Search tags</h1>

<h3>search #tags</h3>
<form ng-submit="" class="form-inline">
  <div class="form-group">
    <input type="text" ng-model="tag" class="form-control" placeholder="type any tag name" autofocus>
  </div>
  <input type="submit" value="search" class="btn btn-cta">
</form>
<hr>
<div class="row" ng-if="instagram.length > 0">
  <div class="col-md-3 col-sm-4">
  	<%= @instagram.each do |instagram| %>
    <div class="thumbnail">

      <%= image_tag instagram.images.low_resolution.url %> 
      user: <%= instagram.user.username %>
			likes: <%= instagram.likes.count %>
      <br>
      <p>
        <span class="glyphicon" ng-class="{'glyphicon-heart': instagram.likes.count > 0, 'glyphicon-heart-empty': photo.likes.count === 0}"></span>

        <span class="pull-right">
          <%= instagram.user.username %>
        </span>
      </p>
      <p>
        <a href="javascript:void(0)" ng-click="savePhoto(photo)"> 
          <span class="glyphicon" class="'glyphicon-star': photo.favorited, 'glyphicon-star-empty': !photo.favorited"></span>  
          favorite
        </a>
      </p>
    </div>
  </div>
  <% end %>
</div>
