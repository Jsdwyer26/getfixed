<!DOCTYPE html>
<html>
	<head>
		<title>Get Fixed</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Get Fixed</a>
				</div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li><a href="/bikes/new">Post a new bike <span class="sr-only">(current)</span></a></li>
						<li><a href="#">Link <span class="sr-only">(current)</span></a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
					<% if current_user %>
				<li><%= current_user.name %> | <%= link_to "Logout", '/logout' %></li>
				<% else %>

				<li><%= link_to "Login", '/login' %> | <%= link_to "Signup", '/signup' %></li>
				<% end %>

					</ul>
					</div><!-- /.navbar-collapse -->
					</div><!-- /.container-fluid -->
				</nav>
				<!-- 	display flash messages above the yield block -->
				<% flash.each do |name, msg| %>
				<div><%= msg %></div>
				<% end %>
				
			
				<%= yield %>
			</body>
		</html>