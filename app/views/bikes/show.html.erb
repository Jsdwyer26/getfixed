<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<p><strong>Bike name: </strong><%= @bike.name %></p>
		<p><strong>Description: </strong> <%= @bike.description %></p>
		<p><%= image_tag @bike.image.url(:large) %></p>

		<div class="text-center">
			<%= link_to like_bike_path(@bike), method: :put, class: "btn btn-default" do %>
			<span class="glyphicon glyphicon-triangle-top"></span>
			<%= @bike.get_upvotes.size %>
			<% end %>
		</div>

		<p><strong>Posted by: </strong><%= @bike.user.name %></p>
		<p><strong>Post date: </strong><%= @bike.created_at.strftime("%b. %d %Y") %></p>

		<div>
		<% if current_user %>
			<p><%= link_to "Edit", edit_bike_path(@bike), class: "btn btn-primary" %></p>
			<p><%= button_to "Delete", @bike, method: :delete, class: "btn btn-primary" %></p>
		<% end %>
		</div>

	</div>
</div>