<div class="row">
	<div class="col-md-6 col-md-offset-3 well">
		<div class="caption">
			<h3><%= @user.name %> </h3>
			<p><%= link_to 'Edit', edit_user_path(current_user), :class =>"glyphicon glyphicon-cog"%></p>
		</div>
		<div class="col-md-6">
			<h3>Your bike quiver</h3>
			<% @bikes.each do |bike| %>
			<div>
				<h4>Click here to edit or delete <%= link_to bike.name, bike_path(bike) %></h4>
				<p><strong>Originally posted on <%= bike.created_at.strftime("%b. %d %Y") %></strong></p>
				<p><%= image_tag bike.image.url(:large) %></p>
			</div>
			<% end %>
		</div>
	</div>
</div>