<div class="row">
  <div class="col-sm-6 col-md-4">
    <div>
      <div class="caption">
        <h3><%= @user.name %> </h3>
        <p><%= link_to 'Edit', edit_user_path(@user), :class =>"glyphicon glyphicon-cog"%></p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <% @posts.each do |p| %>
    <div class="thumbnail">
      <h4><%= link_to p.title, bike_path(bike) %></h4>
      <p><%= bike.name %></p>
      <p><small><%= p.created_at.strftime("%A, %B %d") %></small></p>
    </div>
    <% end %>
  </div>
</div>